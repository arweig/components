			</div>
		</div>
	</section>
</Layout>

<style>
	.contents {
		border: 1px solid rgb(202, 202, 202);
		border-radius: 4px;
		padding: 20px;
	}

	h2 {
		margin-top: 40px;
	}

	button {
		float: right;
		padding: 5px 5px 2px 5px ;
		border: 0;
		display: block;
		border-radius: 2px;
		background-color: transparent;
	}

	button#copy-code:hover {
		background-color: rgb(236, 236, 236);
		transition: .2s;
	}

	button#copy-code.active {

	}
	
	/* show by default */
	#preview-contents {
    display: flex;
		align-items: center;
		justify-content: center;
  }

 	/* hide by default */
  #code-contents {
    display: none;
		background-color: rgb(247, 247, 247);
  }

	.btn-container {
		border-bottom: 1px solid rgb(202, 202, 202);
		margin-bottom: 10px;
		display: flex;
		gap: 20px;
		align-items: flex-start;
	}

  .btn-container button {
    cursor: pointer;
		background-color: transparent;
		border: 0;
		padding-bottom: 8px;
  }

  .btn-container button.active {
    color: rgb(0, 0, 0);
		border-bottom: 2px solid black;
  }

</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var previewButton = document.getElementById('preview');
    var codeButton = document.getElementById('code');
    var previewContents = document.getElementById('preview-contents');
    var codeContents = document.getElementById('code-contents');

    // function to show preview and hide code
    function showPreview() {
      previewContents.style.display = 'flex';
      codeContents.style.display = 'none';
      previewButton.classList.add('active');
      codeButton.classList.remove('active');
    }

    // function to show code and hide preview
    function showCode() {
      codeContents.style.display = 'block';
      previewContents.style.display = 'none';
      codeButton.classList.add('active');
      previewButton.classList.remove('active');
    }

    // start with preview visible and button active
    showPreview();

    // event listener for the preview button
    previewButton.addEventListener('click', showPreview);

    // event listener for the code button
    codeButton.addEventListener('click', showCode);
  });
</script>