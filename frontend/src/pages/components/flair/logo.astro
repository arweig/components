---
import Layout from '../../../layouts/Layout.astro';

import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import Page from '../Page.astro';
const currentPath = '/components/flair/logo';
---

<Layout title="Component App">
	<section id="logo">
		<div class="container">
			<header>
			<Breadcrumbs path={currentPath} />
			<Page title="Logo" text="Description about the component." />
		</header>
			<div class="btn-container">
				<button id="preview">Preview</button>
				<button id="code">Code</button>
			</div>
			<div class="contents" id="preview-contents">
				<p>preview</p>
			</div>
			<div class="contents" id="code-contents">
				<button id="copy-code">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-copy"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-copy-check"><path d="m12 15 2 2 4-4"/><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>
				</button>
