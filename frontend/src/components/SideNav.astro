<script>
  var acc = document.getElementsByClassName("accordion") as HTMLCollectionOf<HTMLElement>;

  function loadAccordionState() {
    for (var i = 0; i < acc.length; i++) {
      var isOpen = localStorage.getItem("accordion" + i) === "true";
      var panel = acc[i].nextElementSibling as HTMLElement;
      if (isOpen) {
        panel.style.display = "block";
        acc[i].classList.add("active");
      } else {
        panel.style.display = "none";
        acc[i].classList.remove("active");
      }
    }
  }

  function saveAccordionState() {
    for (var i = 0; i < acc.length; i++) {
      var panel = acc[i].nextElementSibling as HTMLElement;
      localStorage.setItem("accordion" + i, panel.style.display === "block" ? "true" : "false");
    }
  }

  for (var i = 0; i < acc.length; i++) {
    acc[i].addEventListener("click", function() {
      this.classList.toggle("active");
      var panel = this.nextElementSibling as HTMLElement;
      panel.style.display = (panel.style.display === "block") ? "none" : "block";
      saveAccordionState();
    });
  }

  loadAccordionState();
</script>